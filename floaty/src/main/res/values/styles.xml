<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimaryDark">#00574B</item>
        <item name="colorPrimary">#008577</item>
        <item name="colorAccent">#81DED5</item>
        <item name="android:colorAccent" tools:targetApi="lollipop">#81DED5</item>
        <item name="android:colorBackground">#E3DFEA</item>
    </style>

    <style name="Dialog" parent="android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
    </style>

    <!-- Base style for animations.  This style specifies no animations. -->
    <style name="Animation" />


    <style name="AnimationDragUp">
        <item name="android:windowEnterAnimation">@anim/drag_down</item>
        <item name="android:windowExitAnimation">@anim/drag_up</item>
    </style>

    <style name="AnimationDragDown">
        <item name="android:windowEnterAnimation">@anim/slide_up</item>
        <item name="android:windowExitAnimation">@anim/slide_down</item>
    </style>

    <style name="DialogDragDown">
        <item name="android:windowEnterAnimation">@anim/slide_up_dialog</item>
        <item name="android:windowExitAnimation">@anim/slide_down_dialog</item>
    </style>

    <style name="Theme.FloatingSwipe">
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowCloseOnTouchOutside">false</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowAnimationStyle">@style/AnimationDragDown</item>
        <item name="android:windowBackground">@drawable/round_corner_background</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="Theme.FloatingMenuSwipe">
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowAnimationStyle">@style/AnimationDragDown</item>
        <item name="android:windowBackground">@drawable/round_corner_background_2</item>
    </style>


</resources>